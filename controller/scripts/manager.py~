#!/usr/bin/env python

import rospy
import roslaunch
import os

def arm():
    try:
        arming = rospy.ServiceProxy('mavros/cmd/arming', Arming)
        arming(True)
    except rospy.ServiceException as ex:
        rospy.logerr('[LD]: arming attempt not successful')

def connect():
    os.system("roslaunch scenarios iris1.launch") #iris1.launch can be changed to another launch file

def start():
    try:
        begin = rospy.ServiceProxy('begin', Begin)
        begin()
    except rospy.ServiceException as ex:
        rospy.logerr('[LD]: begin attempt not successful')

def manager():
   rospy.init_node('manager')

